tis_data = load("2D_CONTROL_results.txt");

NX = 10;
NY = 10;

video = VideoWriter('2D_CONTROL.mp4');
video.FrameRate = 10;

open(video)

for i= 1:length(tis_data)
% for i= 1
    tis_slice = tis_data(i,:);
    tis_slice = reshape(tis_slice, NX, NY);
    surf(tis_slice)
    view(2)
    caxis([-90 60])
    colorbar
    set(gca,'visible','off')
    
    
    frame=getframe(gc
    writeVideo(video, frame);
%     M(i) = getframe(gcf);
end

%%
movie(M)

